++      strncpy (filepath, file->path, sizeof(filepath) - 1);
++      char* dirsep = &filepath[0];
++      while ( (dirsep = strpbrk (dirsep, "\\")) != NULL)
++        *dirsep = '/';
++      if (strstr(file->path, "/../"))
++	{
